<style>
    .js-datagrid-flatpickr.form-control[readonly] {
        background-color: transparent;
        color: inherit;
    }
</style>
<input class="js-datagrid-flatpickr form-control" name="{{ name }}" data-index="{{ index }}" data-mode="range"
       placeholder="{% if placeholder is null %}{{ name }}{% else %}{{ placeholder }}{% endif %}">
